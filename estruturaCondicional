/* QUESTÃO EXTRA - VALIDAR DADOS DE USUÁRIA************************************************************************
Declare duas variáveis com os dados de email e senha para realizar login, e informe que a validação funcionou apenas
se os dados da usuária forem: email - giselesilva0807@hotmail.com, e a senha: 123456.
*/

let email = "gisele0807@hotmail.com";
let senha = 12345;

if(email === "giselesilva0807@hotmail.com" && senha === 123456){
    console.log(`Usuária autenticada com sucesso!`);
} else if(email !== "giselesilva0807@hotmail.com" && senha !== 123456){
    console.log(`Email e senha incorretos! Tente novamente!`);
} else if( email === "giselesilva0807@hotmail.com" && senha != 123456){
    console.log(`Sua senha está incorreta, reveja ;)`);
} else if(email !== "giselesilva0807@hotmail.com" && senha === 123456){
    console.log(`Ajuste seu email!`)
} else { 
    console.log(`Erro em alguma coisa, braseel!`)
}

